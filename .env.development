# BIT Tutor - Development Environment Configuration

# Development Environment Variables
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-not-for-production
DATABASE_URL=postgresql://dev_user:dev_password@postgres-dev:5432/bit_tutor_dev
REDIS_URL=redis://redis-dev:6379/0

# AI Service Configuration (Development)
OPENAI_API_KEY=your-dev-openai-api-key-here
HUGGINGFACE_API_KEY=your-dev-huggingface-api-key-here

# Application Configuration
PORT=5000
DEBUG=1
TESTING=0

# Data Directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs
STATIC_DIR=/app/static

# Session Configuration (Relaxed for development)
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_HTTPONLY=0
SESSION_COOKIE_SAMESITE=None

# CORS Configuration (Permissive for development)
CORS_ORIGINS=*

# Monitoring and Logging
LOG_LEVEL=DEBUG

# Development specific
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1