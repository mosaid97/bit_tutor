# Educational AI Agent System - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# OpenAI API Key (required for LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Key (optional, for additional models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_DB=educational_ai
POSTGRES_USER=edu_agent
POSTGRES_PASSWORD=secure_password_123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Neo4j Configuration (for Knowledge Graph)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password_123

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_password_123

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Knowledge Graph Service
KG_SERVICE_PORT=5001
KG_SERVICE_WORKERS=2
KG_SERVICE_TIMEOUT=30

# Knowledge Tracing Service
KT_SERVICE_PORT=5002
KT_SERVICE_WORKERS=2
KT_SERVICE_TIMEOUT=30

# Cognitive Diagnosis Service
CD_SERVICE_PORT=5003
CD_SERVICE_WORKERS=2
CD_SERVICE_TIMEOUT=30

# Recommendation Service
REC_SERVICE_PORT=5004
REC_SERVICE_WORKERS=2
REC_SERVICE_TIMEOUT=30

# Educational Agent Service
AGENT_SERVICE_PORT=5005
AGENT_SERVICE_WORKERS=2
AGENT_SERVICE_TIMEOUT=60

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# PyTorch Configuration
TORCH_NUM_THREADS=4
CUDA_VISIBLE_DEVICES=0

# Model Parameters
EMBEDDING_DIM=64
HIDDEN_DIM=128
NUM_EPOCHS=100
LEARNING_RATE=0.001
BATCH_SIZE=32

# =============================================================================
# PERFORMANCE AND SCALING
# =============================================================================

# Memory Limits (in MB)
KG_MEMORY_LIMIT=1024
KT_MEMORY_LIMIT=2048
CD_MEMORY_LIMIT=2048
REC_MEMORY_LIMIT=1024
AGENT_MEMORY_LIMIT=1024

# CPU Limits (number of cores)
KG_CPU_LIMIT=1
KT_CPU_LIMIT=2
CD_CPU_LIMIT=2
REC_CPU_LIMIT=1
AGENT_CPU_LIMIT=1

# Request Timeouts (in seconds)
API_TIMEOUT=30
MODEL_INFERENCE_TIMEOUT=60
DATABASE_TIMEOUT=10

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Development Mode
DEV_MODE=false
DEBUG_LOGGING=false
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_db
TEST_REDIS_URL=redis://localhost:6380

# =============================================================================
# SECURITY AND AUTHENTICATION
# =============================================================================

# API Authentication
ENABLE_API_AUTH=true
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=Content-Type,Authorization

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
FORCE_HTTPS=false

# =============================================================================
# DATA AND STORAGE
# =============================================================================

# File Storage
DATA_DIRECTORY=/app/data
UPLOAD_DIRECTORY=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Webhook Configuration
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_KNOWLEDGE_TRACING=true
ENABLE_COGNITIVE_DIAGNOSIS=true
ENABLE_RECOMMENDATION=true
ENABLE_XAI_EXPLANATIONS=true

# Experimental Features
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_MULTI_LANGUAGE_SUPPORT=false
